// Configuration

configuration {
	modi:                       "drun,window";
    	show-icons:                 true;
    	display-drun:               "Apps";
    	display-window:             "Windows";
	drun-display-format:        "{name}";
	window-format:              "{w} · {c}";
	disable-history:	    true;
	application-fallback-icon:  "Adwaita";
	icon-theme:		    "Papirus-Dark";
}

@import "shared.rasi"

// Main Window

window {

    /* properties for window widget */

    	transparency:                "real";
    	location:                    center;
   	anchor:                      center;
    	fullscreen:                  false;
    	width:                       760px;
    	x-offset:                    0px;
    	y-offset:                    0px;

    /* properties for all widgets */

    	enabled:                     true;
    	border-radius:               0px;
    	cursor:                      "default";
	background-color:            @background;
}

// Main Box

mainbox {

    	enabled:                     true;
    	spacing:                     10px;
    	background-color:            transparent;
    	orientation:                 horizontal;
    	children:                    [ "imagebox", "listbox" ];

}

imagebox {

    	padding:                     15px;
    	background-color:            transparent;
    	background-image:            url("~/.config/bspwm/rofi/rofi.png", height);
   	orientation:                 vertical;
    	children:                    [ "inputbar", "dummy", "mode-switcher" ];

}

listbox {

    	spacing:                     8px;
    	padding:                     8px;
    	background-color:            transparent;
    	orientation:                 vertical;
    	children:                    [ "message", "listview" ];
}

dummy {

    	background-color:            transparent;

}

// Inputbar

inputbar {

    	enabled:                     true;
    	spacing:                     10px;
    	padding:                     10px;
    	border-radius:               5px;
    	background-color:            @background-alt;
    	text-color:                  @foreground;
    	children:                    [ "textbox-prompt-colon", "entry" ];

}

textbox-prompt-colon {

	font:			     "Cascadia Code Bold 9";
    	enabled:                     true;
    	expand:                      false;
    	str:                         "󰚈";
	border-radius:		     5px;
    	background-color:            inherit;
    	text-color:                  inherit;

}

entry {

    	enabled:                     true;
    	background-color:            inherit;
    	text-color:                  inherit;
    	cursor:                      text;
    	placeholder:                 "Search";
    	placeholder-color:           inherit;
	expand: 		     false;

}

// Mode Switcher

mode-switcher{

    	enabled:                     true;
    	spacing:                     10px;
    	background-color:            transparent;
    	text-color:                  @foreground;

}

button {

    	padding:                     5px;
    	border-radius:               5px;
    	background-color:            @background-alt;
    	text-color:                  inherit;
    	cursor:                      pointer;

}

button selected {

    	background-color:            @selected;
    	text-color:                  @foreground;
}


// Listview

listview {
    	enabled:                     true;
    	columns:                     1;
    	lines:                       10;
    	cycle:                       true;
    	dynamic:                     true;
    	scrollbar:                   false;
    	layout:                      vertical;
    	reverse:                     false;
    	fixed-height:                true;
    	fixed-columns:               true;
    
    	spacing:                     5px;
    	background-color:            transparent;
    	text-color:                  @foreground;
    	cursor:                      "default";
}

// Elements

element {

    	enabled:                     true;
    	spacing:                     10px;
    	padding:                     5px;
    	border-radius:               5px;
    	background-color:            transparent;
    	text-color:                  @foreground;
    	cursor:                      pointer;

}

element normal.normal {

    	background-color:            inherit;
    	text-color:                  inherit;
}

element normal.urgent {

    	background-color:            @urgent;
    	text-color:                  @foreground;

}

element normal.active {

    	background-color:            @active;
    	text-color:                  @foreground;
}

element selected.normal {

    	background-color:            @selected;
    	text-color:                  @foreground;
	
}

element selected.urgent {

    	background-color:            @urgent;
    	text-color:                  @foreground;

}

element selected.active {

    	background-color:            @urgent;
    	text-color:                  @foreground;

}

element-icon {

    	background-color:            transparent;
    	text-color:                  inherit;
    	size:                        25px;
    	cursor:                      inherit;

}

element-text {

    	background-color:            transparent;
    	text-color:                  inherit;
    	cursor:                      inherit;
    	vertical-align:              0.5;
    	horizontal-align:            0.0;

}

// Message

message {

    	background-color:            transparent;

}

textbox {

    	padding:                     10px;
    	border-radius:               5px;
    	background-color:            @background-alt;
    	text-color:                  @foreground;
    	vertical-align:              0.5;
    	horizontal-align:            0.0;

}

error-message {

    	padding:                     15px;
    	border-radius:               5px;
    	background-color:            @background;
    	text-color:                  @foreground;

}
